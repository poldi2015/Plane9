\RequirePackage{environ}
\RequirePackage[many]{tcolorbox}

\pgfdeclareimage[width=\columnwidth-5mm,height=4mm]{longpictureframe}{./lib/images/box-top.png}

\newcommand{\@remarks}[1]{
    \begin{center}
        \begin{tcolorbox}[
            enhanced,
            colback=boxBg,
            coltext=boxText,
            left=2mm,
            right=2mm,
            bottom=4mm, top=3mm,
            width = \columnwidth-5mm,
            arc=2mm,
            outer arc=0mm,
            colframe=storyblack,
            attach boxed title to bottom right={xshift=-10mm,yshift=5mm},
            interior code app={\node[anchor=center]  at ($(frame.north)+(0mm,1mm)$) {\pgfuseimage{longpictureframe}};},
        ]        
        \texttt{#1}
        \end{tcolorbox}
    \end{center}
}

\NewEnviron{remarks}{
    \vspace{5mm}\@remarks{\BODY}
}


