\RequirePackage{color}

%
% Color names
%

\definecolor{lightgreen}{HTML}{18C88D}	        % e.g. chapter color
\definecolor{darkgreen}{HTML}{0d2b58}	        % e.g. subsection color
\definecolor{lightblue}{HTML}{D2E9F8}           % e.g. Chracter Sheet
\definecolor{greyblue}{HTML}{545c85}            % darker blue, e.g. bulletpoints

\definecolor{undergold}{HTML}{C9AD6A}	        % e.g. used for titlerules
\definecolor{darkergray}{HTML}{242724}	        % e.g. used for boxes
\definecolor{lighgrey}{HTML}{ededed}	        % e.g. used for boxes

%
% Color assignment
%

\colorlet{tocTitles}{lightgreen}                % Table of content entry titles

\colorlet{colChapter}{lightgreen}	            % chapter color
\colorlet{colSection}{lightgreen}	            % section color
\colorlet{colSubsection}{darkgreen}	            % subsection color
\colorlet{colTitleRuler}{undergold}	            % subsection color

\colorlet{colFoot}{undergold}	                % text in footer

\colorlet{itemBullet}{greyblue}                % For item bullets
\colorlet{itemTitle}{darkgreen}                  % For item titles

\colorlet{remarkboxframe}{black}                % Frame color of a remark box
\colorlet{remarkboxText}{black}	                % Textcolor within a remark box
\colorlet{remarkboxBg}{lighgrey}	            % Backgroud color of a remark box

\colorlet{imageboxframe}{black}                 % Frame color of a image box
\colorlet{imageboxBg}{lighgrey}	                % Backgroud color of a image box

\colorlet{nscSheetTitle}{darkgreen}             % Color for title of NSC Sheet
\colorlet{nscSheetFrame}{darkergray}            % Frame wor NSC Sheet Box
\colorlet{nscSheetBg}{lightblue}                % Background color for NSC character sheet
\colorlet{nscSheetStatsTitle}{lightblue}        % The name of a NSC attribute
\colorlet{nscSheetStats}{black}                 % The value of a NSC attribute

\colorlet{backmatterquote}{undergold}            % Quoting text on the back cover
\colorlet{backmattertext}{lighgrey}              % Regular text on the back cover